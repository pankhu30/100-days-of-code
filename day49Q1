#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[1000];

    
    printf("Enter a name: ");
    fgets(name, sizeof(name), stdin);


    name[strcspn(name, "\n")] = '\0';

    printf("Initials: ");

  
    if (isalpha(name[0])) {
        printf("%c", toupper(name[0]));
    }

    
    for (int i = 1; name[i] != '\0'; i++) {
        
        if (name[i - 1] == ' ' && isalpha(name[i])) {
            printf("%c", toupper(name[i]));
        }
    }

    printf("\n");
    return 0;
}
