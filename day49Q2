#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[1000];

  
    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    
    name[strcspn(name, "\n")] = '\0';

    int len = strlen(name);
    int i;

    
    for (i = 0; i < len; i++) {
        if (isalpha(name[i])) {
            printf("%c", toupper(name[i]));
        }

        
        if (name[i] == ' ') {
            
            int spaceCount = 0;
            for (int j = i + 1; j < len; j++) {
                if (name[j] == ' ') spaceCount++;
            }
            
            if (spaceCount >= 1) {
                printf("."); 
            } else {
                printf(" ");
                i++; 
                break;
            }
        }
    }

    
    for (; i < len; i++) {
        printf("%c", name[i]);
    }

    printf("\n");

    return 0;
}
