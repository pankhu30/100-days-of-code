#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];

    
    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);

  
    str[strcspn(str, "\n")] = '\0';

    int start = 0, end;

  
    for (int i = 0; ; i++) {
        if (str[i] == ' ' || str[i] == '\0') {
            end = i - 1;
            
            while (start < end) {
                char temp = str[start];
                str[start] = str[end];
                str[end] = temp;
                start++;
                end--;
            }
            start = i + 1; 
        }
        if (str[i] == '\0') break;
    }

    printf("Sentence after reversing each word: %s\n", str);

    return 0;
}
