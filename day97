#include <stdio.h>
#include <stdlib.h>


struct Date {
    int day;
    int month;
    int year;
};


struct Employee {
    char name[50];
    int id;
    float salary;
    struct Date joiningDate;
};

int main() {
    FILE *fp;
    struct Employee emp[3];  
    int n = 3;


    for (int i = 0; i < n; i++) {
        printf("\nEnter details for employee %d:\n", i + 1);
        printf("Name: ");
        getchar();
        fgets(emp[i].name, sizeof(emp[i].name), stdin);
        emp[i].name[strcspn(emp[i].name, "\n")] = 0;

        printf("ID: ");
        scanf("%d", &emp[i].id);

        printf("Salary: ");
        scanf("%f", &emp[i].salary);

        printf("Joining Date (day month year): ");
        scanf("%d %d %d", &emp[i].joiningDate.day, &emp[i].joiningDate.month, &emp[i].joiningDate.year);
    }

    
    fp = fopen("employees.bin", "wb");
    if (fp == NULL) {
        printf("Error opening file for writing!\n");
        return 1;
    }
    fwrite(emp, sizeof(struct Employee), n, fp);
    fclose(fp);
    printf("\nEmployee data saved to employees.bin\n");

  
    struct Employee empRead[n];
    fp = fopen("employees.bin", "rb");
    if (fp == NULL) {
        printf("Error opening file for reading!\n");
        return 1;
    }
    fread(empRead, sizeof(struct Employee), n, fp);
    fclose(fp);

    
    printf("\nEmployee Data Read from File:\n");
    for (int i = 0; i < n; i++) {
        printf("\nEmployee %d:\n", i + 1);
        printf("Name: %s\n", empRead[i].name);
        printf("ID: %d\n", empRead[i].id);
        printf("Salary: %.2f\n", empRead[i].salary);
        printf("Joining Date: %02d-%02d-%04d\n",
               empRead[i].joiningDate.day,
               empRead[i].joiningDate.month,
               empRead[i].joiningDate.year);
    }

    return 0;
}
