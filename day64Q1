#include <stdio.h>
#include <string.h>

int main() {
    char s[1000];
    

    printf("Enter the string: ");
    scanf("%s", s);

    int n = strlen(s);
    int lastIndex[256]; 
    for (int i = 0; i < 256; i++) lastIndex[i] = -1;

    int maxLen = 0, start = 0;

    for (int end = 0; end < n; end++) {
        char current = s[end];

    
        if (lastIndex[(int)current] >= start) {
            start = lastIndex[(int)current] + 1;
        }

      
        lastIndex[(int)current] = end;

      
        int len = end - start + 1;
        if (len > maxLen) maxLen = len;
    }

    printf("Length of the longest substring without repeating characters: %d\n", maxLen);

    return 0;
}
