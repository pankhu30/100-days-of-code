#include <stdio.h>
#include <math.h>

int main() {
    int num, first, last, digits, swapped, temp;

    
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    if (num < 10) {
        printf("Number has only one digit, swapping not needed: %d\n", num);
        return 0;
    }

    temp = num;
    last = temp % 10;

    digits = 0;
    while (temp != 0) {
        first = temp % 10;
        temp /= 10;
        digits++;
    }

    
    swapped = last * pow(10, digits - 1) + (num % (int)pow(10, digits - 1) - last) + first;

    printf("Number after swapping first and last digits: %d\n", swapped);

    return 0;
}
