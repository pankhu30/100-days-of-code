#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    char longest[1000] = "";
    int maxLen = 0;

    
    printf("Enter a sentence: ");
    fgets(str, sizeof(str), stdin);

    int len = strlen(str);
    if (str[len - 1] == '\n') {
        str[len - 1] = '\0'; 
    }

    char word[1000];
    int index = 0;

  
    for (int i = 0; ; i++) {
        if (str[i] != ' ' && str[i] != '\0') {
            word[index++] = str[i];
        } else {
            word[index] = '\0';
            if (index > maxLen) {
                maxLen = index;
                strcpy(longest, word);
            }
            index = 0;
        }

        if (str[i] == '\0') break;
    }

    printf("Longest word: %s\n", longest);

    return 0;
}
